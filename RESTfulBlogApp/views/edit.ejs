<%- include("partials/header") %>
<div class="ui main text container segment">
  <div class="ui huge header">Edit <%= blogs.title%></div>
  <form
    class="ui form"
    method="POST"
    action="/blogs/<%= blogs._id%>?_method=PUT"
  >
    <div class="field">
      <label for="title">Title</label>
      <input type="text" name="title" value="<%= blogs.title%>" />
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="image" value="<%= blogs.image%>" />
    </div>
    <div class="field">
      <label> Text goes here</label>
      <textarea name="body"><%= blogs.body%>"</textarea>
    </div>

    <button class="btn btn-secondary">Submit</button>
  </form>
</div>
<%- include("partials/footer") %>
